<div class="contents clearfix">
  <div class="sign-up">
    <h2 class="sign-up-title">パスワードを忘れましたか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="sign-up-input-box">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, class: "sign-up-input" %>
      </div>

      <div class="actions sign-up-input-box", style="height:30px;">
        <%= f.submit "パスワード再設定メールを送る", class: "sign-up-submit-button",style: "width:210px;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
