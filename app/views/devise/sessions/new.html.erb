<div class="contents clearfix">
  <div class="sign-up">
    <h2 class="sign-up-title">ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="sign-up-input-box">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, class: "sign-up-input"  %>
      </div>

      <div class="sign-up-input-box">
        <%= f.label "パスワード"%><br />
        <%= f.password_field :password, autocomplete: "off", class: "sign-up-input"  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="sign-up-input-box" style="height:30px;">
          <%= f.check_box :remember_me %>
          <%= f.label "メールアドレスを記憶" %>
        </div>
      <% end -%>

      <div class="actions sign-up-input-box">
        <%= f.submit "ログイン", class: "sign-up-submit-button"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
