<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="contents clearfix">
    <div class="sign-up">
      <h2 class="sign-up-title">書斎.com(仮) 会員登録</h2>
      <%= devise_error_messages! %>
      <div class="sign-up-input-box">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, class: "sign-up-input"  %>
      </div>

      <div class="sign-up-input-box">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
        <em>（半角英数<%= @minimum_password_length %> 文字以上）</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "sign-up-input" %>
      </div>

      <div class="sign-up-input-box">
        <%= f.label "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "sign-up-input"  %>
      </div>

      <div class="sign-up-input-box">
        <%= f.label "ニックネーム" %><br />
        <%= f.text_field :nickname, class: "sign-up-input"  %>
      </div>

      <div class="sign-up-avatar-box">
        <%= f.label "アイコン（任意）" %><br />
        <%= f.file_field :avatar %>
      </div>


      <div class="actions sign-up-input-box">
        <%= f.submit "会員登録", class: "sign-up-submit-button" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
